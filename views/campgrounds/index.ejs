<% layout('/layout/boilerplate_index') %> 


<h1 class="text-center" style="color: white;">All Campgrounds</h1>
    <% for(const camp of campgrounds){ %>
        <div class="card my-3" style="border-radius: 15px; background-color:#26273b;">
            <div class="row">
                <div class="col-md-4 ">
                    <% if(camp.image.length) {%> 
                        <img class="card-img" style="border-radius: 15px; max-height: 13rem; object-fit: cover;" src='<%= camp.image[0].thumbnail %> ' alt="">
                    <% }else{ %> 
                    <img class="card-img" style="border-radius: 15px; max-height: 13rem; object-fit: cover;" src='https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/600px-No_image_available.svg.png' alt="">
                    <% } %> 
                </div>
                <div class="col-md-8">
                    <h3 class="p-3" style="color: white;"><%= camp.title %> </h2>
                    <h4 class="px-3" style="color: white;"><%= camp.location %> </h3>
                    <h5 class="px-3" style="color: white;">RS - <%= camp.price %> /-</h5>
                    
                    <a class="btn btn-info mx-3 mb-3" href="/campgrounds/<%= camp._id %> ">Details</a>
                </div>
            </div>
        </div>
    <% } %>  

